{{!< default}} 
{{#post ~}}
    <div class="post-image-container" style="background-image: url({{image}})">
      <div class="post-image-filter">
        <div class="text-xs-center post-info">
          <h1 class="post-title animated fadeInUp">{{title}}</h1>

        {{#if tags}}<span class="tags animated fadeInUp"><i class="fa fa-tags"></i> {{tags prefix="" separator=", "}}</span>{{/if}}
        <br />
        <span class="post-data"><span class="date animated fadeInUp"><i class="fa fa-clock-o"></i> <time class="timesince date" data-timesince="{{date format='X'}}" datetime="{{date format='YYYY-MM-DDTHH:mm'}}" title="{{date format='DD MMMM YYYY'}}">{{date published_at timeago='true'}}</time></span>
        <p></p>

        </div>
      </div>
    </div>
    <br />
  <div class="container bg-white">
  <br />
    {{content}}
  <br />
  </div>
  <br />
  <div class="container bg-white credits">

        {{#author}}
      <h1 class="text-xs-center">About the Author</h1>
      <br />
      <div class="row">
        <div class="col-sm-3 col-xs-8">
          <a href="{{url}}"><img src="{{image}}" alt="{{name}}" class="center-block img-credits-author img-rounded"></a>
          <p></p>
        </div>
        <div class="col-sm-9 col-xs-8">
          <div class="card card-inverse card-primary">
            <div class="card-block text-xs-center">
              <h4 class="card-title"><a class="undecorated" href="{{url}}">{{name}}</a></h4>
              <hr />
              <p class="card-text">
                {{bio}}
              </p>
            </div>
          </div>
        </div>
      </div>
      {{/author}}
  </div>
  <br />

  <div class="container bg-white credits">
  <br />
  <h2>You May Like...</h2> 
  <p></p>
    <div class="row">
      <div class="col-sm-6">
        {{#next_post}}
            <div class="card">
              <a href="{{url}}"><img class="card-img-top" src="{{image}}" alt="Card image cap"></a>
              <div class="card-block">
                <h4 class="card-title"><a href="{{url}}">{{{title}}}</a></h4>

                <p class="card-text">{{excerpt words=19}}…</p>
              </div>
            </div>
        {{/next_post}}
      </div>
      <div class="col-sm-6">
        {{#prev_post}}
    <div class="card">
      <a href="{{url}}"><img class="card-img-top" src="{{image}}" alt="Card image cap"></a>
      <div class="card-block">
        <h4 class="card-title"><a href="{{url}}">{{{title}}}</a></h4>

        <p class="card-text">{{excerpt words=19}}…</p>
      </div>
    </div>
    {{/prev_post}}
    </div>
</div>
</div>

{{~/post}}
